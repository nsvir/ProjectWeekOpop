<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:src="@drawable/photo_rodolpha_profil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>

    <TextView
        android:id="@+id/profileSeeOpTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voir tous mes op"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/color2"
        android:padding="@dimen/profile_line"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/profileEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier le profil"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/color2"
        android:padding="@dimen/profile_line"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/profileConditionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conditions/Confidentialité"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/color2"
        android:padding="@dimen/profile_line"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/profileDisconnectTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se déconnecter"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/color2"
        android:padding="@dimen/profile_line"
        android:layout_marginTop="2dp" />
</LinearLayout>