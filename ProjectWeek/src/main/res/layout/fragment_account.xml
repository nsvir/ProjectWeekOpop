<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:src="@drawable/photo_zara"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/profilePseudoTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RODOLPHA_04"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profileTotalDesTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL DES"
                        android:textColor="@color/color2"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/profilePointsTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="POINTS"
                        android:textSize="28sp"
                        android:textColor="@color/color2"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="-13dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/profilePointsTotTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:layout_marginLeft="5dp"
                    android:textSize="50sp"
                    android:textColor="@color/color2"
                    android:gravity="top"
                    android:includeFontPadding="false"
                    android:layout_marginTop="-10dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/profileSeeOpTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voir tous mes op"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/color2"
        android:padding="@dimen/profile_line"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/profileEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier le profil"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/color2"
        android:padding="@dimen/profile_line"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/profileConditionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conditions/Confidentialité"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/color2"
        android:padding="@dimen/profile_line"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/profileDisconnectTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se déconnecter"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@color/color2"
        android:padding="@dimen/profile_line"
        android:layout_marginTop="2dp" />
</LinearLayout>